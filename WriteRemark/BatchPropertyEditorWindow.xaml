<Window x:Class="WriteRemark.BatchPropertyEditorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WriteRemark"
        mc:Ignorable="d"
        Title="批量编辑属性" Height="700" Width="1250"
        MinHeight="400" MinWidth="900"
        WindowStartupLocation="CenterScreen"
        TextOptions.TextFormattingMode="Display"
        TextOptions.TextRenderingMode="ClearType"
        UseLayoutRounding="True"
        SnapsToDevicePixels="True"
        Loaded="Window_Loaded">
    <Window.Resources>
        <!-- 现代化按钮样式 -->
        <Style x:Key="ModernButton" TargetType="Button">
            <Setter Property="Background" Value="#FF4CAF50"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="12,6"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="4"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#FF45A049"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#FF3D8B40"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Background" Value="#FFCCCCCC"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- 次要按钮样式 -->
        <Style x:Key="SecondaryButton" TargetType="Button">
            <Setter Property="Background" Value="#FF2196F3"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="12,6"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="4"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#FF1976D2"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#FF0D47A1"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- 取消按钮样式 -->
        <Style x:Key="CancelButton" TargetType="Button">
            <Setter Property="Background" Value="#FFE0E0E0"/>
            <Setter Property="Foreground" Value="#FF333333"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="#FF888888"/>
            <Setter Property="Padding" Value="12,6"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="4"
                                Padding="{TemplateBinding Padding}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#FFD0D0D0"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#FFC0C0C0"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- 设置按钮样式 -->
        <Style x:Key="SettingsButton" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderBrush" Value="#FF888888"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="15" 
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}">
                            <ContentPresenter HorizontalAlignment="Center" 
                                              VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#FFF3F3F3"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#FFE0E0E0"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- DataGrid 单元格错误样式 -->
        <Style x:Key="ErrorCellStyle" TargetType="DataGridCell">
            <Style.Triggers>
                <DataTrigger Binding="{Binding HasError}" Value="True">
                    <Setter Property="Background" Value="#FFFFEBEE"/>
                    <Setter Property="Foreground" Value="#FFD32F2F"/>
                    <Setter Property="ToolTip" Value="{Binding ErrorMessage}"/>
                </DataTrigger>
            </Style.Triggers>
        </Style>

        <!-- DataGrid 行样式 -->
        <Style x:Key="ModifiedRowStyle" TargetType="DataGridRow">
            <Style.Triggers>
                <DataTrigger Binding="{Binding IsModified}" Value="True">
                    <Setter Property="Background" Value="#FFFEF9E7"/>
                </DataTrigger>
            </Style.Triggers>
        </Style>

        <!-- 列头颜色样式 -->
        <Style x:Key="BlueHeader" TargetType="DataGridColumnHeader" BasedOn="{StaticResource {x:Type DataGridColumnHeader}}">
            <Setter Property="Foreground" Value="#FF2196F3"/>
            <Setter Property="FontWeight" Value="Bold"/>
        </Style>
        <Style x:Key="PurpleHeader" TargetType="DataGridColumnHeader" BasedOn="{StaticResource {x:Type DataGridColumnHeader}}">
            <Setter Property="Foreground" Value="#FF9C27B0"/>
            <Setter Property="FontWeight" Value="Bold"/>
        </Style>
        <Style x:Key="OrangeHeader" TargetType="DataGridColumnHeader" BasedOn="{StaticResource {x:Type DataGridColumnHeader}}">
            <Setter Property="Foreground" Value="#FFFF9800"/>
            <Setter Property="FontWeight" Value="Bold"/>
        </Style>
        <Style x:Key="GreenHeader" TargetType="DataGridColumnHeader" BasedOn="{StaticResource {x:Type DataGridColumnHeader}}">
            <Setter Property="Foreground" Value="#FF4CAF50"/>
            <Setter Property="FontWeight" Value="Bold"/>
        </Style>
        <Style x:Key="CyanHeader" TargetType="DataGridColumnHeader" BasedOn="{StaticResource {x:Type DataGridColumnHeader}}">
            <Setter Property="Foreground" Value="#FF00BCD4"/>
            <Setter Property="FontWeight" Value="Bold"/>
        </Style>
        <Style x:Key="DarkGrayHeader" TargetType="DataGridColumnHeader" BasedOn="{StaticResource {x:Type DataGridColumnHeader}}">
            <Setter Property="Foreground" Value="#FF455A64"/>
            <Setter Property="FontWeight" Value="Bold"/>
        </Style>
        <Style x:Key="RedHeader" TargetType="DataGridColumnHeader" BasedOn="{StaticResource {x:Type DataGridColumnHeader}}">
            <Setter Property="Foreground" Value="#FFF44336"/>
            <Setter Property="FontWeight" Value="Bold"/>
        </Style>
    </Window.Resources>

    <Grid Margin="15" Background="#FAFAFA">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!-- 标题栏 -->
        <Border Grid.Row="0" Margin="0,0,0,10" Background="White" CornerRadius="8" Padding="15,8">
            <Border.Effect>
                <DropShadowEffect BlurRadius="10" ShadowDepth="2" Color="LightGray" Opacity="0.3"/>
            </Border.Effect>
            <StackPanel>
                <!-- 标题行 -->
                <Grid>
                    <TextBlock Text="批量编辑属性" FontSize="18" FontWeight="Bold"
                               VerticalAlignment="Center" HorizontalAlignment="Center" Foreground="#FF333333" />
                    <Button x:Name="btnTopMost" Width="22" Height="22" Click="BtnTopMost_Click" 
                            ToolTip="窗口已置顶（点击取消）" Background="Transparent" BorderThickness="0"
                            HorizontalAlignment="Right" VerticalAlignment="Center"
                            Cursor="Hand" Padding="2">
                        <Path x:Name="pathTopMost" Data="M7,15L12,10L17,15H7Z" 
                              Fill="#FF4CAF50" Stretch="Uniform" Width="12" Height="12" />
                    </Button>
                </Grid>
                
                <!-- 操作目录显示 -->
                <Border Margin="0,8,0,0" Background="#FFF5F5F5" CornerRadius="4" Padding="8,5">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <TextBlock Grid.Row="0" Text="操作目录：" FontSize="11" Foreground="#FF666666" 
                                   Margin="0,0,0,3"/>
                        <TextBox Grid.Row="1" x:Name="txtOperationPath" IsReadOnly="True" 
                                 Background="Transparent" BorderThickness="0" 
                                 FontSize="11" Foreground="#FF333333" 
                                 Padding="0" MinHeight="20" MaxHeight="60"
                                 TextWrapping="Wrap" 
                                 VerticalScrollBarVisibility="Auto"
                                 IsTabStop="False"
                                 ToolTip="{Binding Text, RelativeSource={RelativeSource Self}}"/>
                    </Grid>
                </Border>
            </StackPanel>
        </Border>

        <!-- 工具栏 - 文件批量操作 -->
        <Border Grid.Row="1" Margin="0,0,0,10" Background="White" CornerRadius="8" Padding="10">
            <Border.Effect>
                <DropShadowEffect BlurRadius="10" ShadowDepth="2" Color="LightGray" Opacity="0.3"/>
            </Border.Effect>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <WrapPanel Grid.Column="0" Orientation="Horizontal">
                    <TextBlock Text="文件批量操作:" VerticalAlignment="Center" FontWeight="Bold" Margin="5,0,10,0" Foreground="#FF2196F3"/>

                    <Button x:Name="btnSelectAllFiles" Content="全选" Width="60" Margin="5,0"
                            Style="{StaticResource SecondaryButton}" Click="BtnSelectAllFiles_Click"/>
                    <Button x:Name="btnSelectNoneFiles" Content="全不选" Width="60" Margin="5,0"
                            Style="{StaticResource SecondaryButton}" Click="BtnSelectNoneFiles_Click"/>
                    <Button x:Name="btnInvertSelectionFiles" Content="反选" Width="60" Margin="5,0"
                            Style="{StaticResource SecondaryButton}" Click="BtnInvertSelectionFiles_Click"/>

                    <Separator Margin="10,0" Width="2"/>

                    <ComboBox x:Name="cmbBatchFieldFile" Width="100" Margin="5,0" SelectedIndex="0"
                              SelectionChanged="CmbBatchFieldFile_SelectionChanged">
                        <ComboBoxItem Content="标题"/>
                        <ComboBoxItem Content="主题"/>
                        <ComboBoxItem Content="分级"/>
                        <ComboBoxItem Content="标记"/>
                        <ComboBoxItem Content="类别"/>
                        <ComboBoxItem Content="备注"/>
                    </ComboBox>

                    <ComboBox x:Name="txtBatchValueFile" Width="200" Margin="5,0"
                              VerticalAlignment="Center" IsEditable="True"/>

                    <Button x:Name="btnApplyBatchFile" Content="应用到选中" Width="90" Margin="5,0"
                            Style="{StaticResource ModernButton}" Click="BtnApplyBatchFile_Click"/>

                    <Button x:Name="btnClearSelectedFile" Content="清空选中" Width="80" Margin="5,0"
                            Style="{StaticResource SecondaryButton}" Click="BtnClearSelectedFile_Click"
                            ToolTip="清空所选文件的所选字段"/>
                    
                    <Separator Margin="10,0" Width="2"/>
                    
                    <Button x:Name="btnCopySelectedFiles" Content="复制选中" Width="80" Margin="5,0"
                            Style="{StaticResource SecondaryButton}" Click="BtnCopySelectedFiles_Click"
                            ToolTip="复制选中文件到剪贴板（表格格式）"/>
                    <Button x:Name="btnCopyAllFiles" Content="复制全部" Width="80" Margin="5,0"
                            Style="{StaticResource SecondaryButton}" Click="BtnCopyAllFiles_Click"
                            ToolTip="复制全部文件到剪贴板（表格格式）"/>
                </WrapPanel>

                <Button Grid.Column="1" x:Name="btnFileColumnSettings" Content="列设置" Width="80"
                        Style="{StaticResource SecondaryButton}" Click="BtnFileColumnSettings_Click" 
                        ToolTip="设置文件列显示/隐藏" Margin="5,0,0,0"/>
            </Grid>
        </Border>

        <!-- 数据表格区域 -->
        <Border Grid.Row="2" Background="White" CornerRadius="8" Padding="5">
            <Border.Effect>
                <DropShadowEffect BlurRadius="10" ShadowDepth="2" Color="LightGray" Opacity="0.3"/>
            </Border.Effect>

            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <StackPanel>
                    <!-- 文件列表 Expander -->
                    <Expander x:Name="expanderFiles" Header="文件 (0)" IsExpanded="True" Margin="5">
                        <Expander.HeaderTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding}" FontSize="14" FontWeight="Bold" Foreground="#FF333333"/>
                            </DataTemplate>
                        </Expander.HeaderTemplate>

                        <Border Background="#FAFAFA" CornerRadius="4" Margin="5" Padding="5">
                            <DataGrid x:Name="dgFiles"
                                      AutoGenerateColumns="False"
                                      CanUserAddRows="False"
                                      CanUserDeleteRows="False"
                                      SelectionMode="Extended"
                                      AlternatingRowBackground="#FFF5F5F5"
                                      GridLinesVisibility="Horizontal"
                                      HeadersVisibility="Column"
                                      RowHeight="26"
                                      MaxHeight="250"
                                      RowStyle="{StaticResource ModifiedRowStyle}"
                                      FontSize="12"
                                      FontFamily="Segoe UI, Microsoft YaHei UI, Arial"
                                      TextOptions.TextFormattingMode="Display"
                                      TextOptions.TextRenderingMode="ClearType"
                                      RenderOptions.ClearTypeHint="Enabled"
                                      ClipboardCopyMode="ExcludeHeader"
                                      CopyingRowClipboardContent="DgFiles_CopyingRowClipboardContent">

                                <DataGrid.Columns>
                                    <!-- 选择框 -->
                                    <DataGridCheckBoxColumn Header="选择" Binding="{Binding IsSelected, UpdateSourceTrigger=PropertyChanged}" Width="50" ClipboardContentBinding="{x:Null}"/>

                                    <!-- 文件名 -->
                                    <DataGridTextColumn Header="文件名" Binding="{Binding FileName}" Width="200" IsReadOnly="True">
                                        <DataGridTextColumn.ElementStyle>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="ToolTip" Value="{Binding FilePath}"/>
                                                <Setter Property="TextTrimming" Value="CharacterEllipsis"/>
                                            </Style>
                                        </DataGridTextColumn.ElementStyle>
                                    </DataGridTextColumn>

                                    <!-- 标题 -->
                                    <DataGridTemplateColumn Header="标题" Width="150" HeaderStyle="{StaticResource BlueHeader}">
                                        <DataGridTemplateColumn.CellTemplate>
                                            <DataTemplate>
                                                <TextBlock Text="{Binding Title}" TextTrimming="CharacterEllipsis"/>
                                            </DataTemplate>
                                        </DataGridTemplateColumn.CellTemplate>
                                        <DataGridTemplateColumn.CellEditingTemplate>
                                            <DataTemplate>
                                                <ComboBox Text="{Binding Title, UpdateSourceTrigger=LostFocus}" 
                                                          IsEditable="True" 
                                                          Tag="Title"
                                                          Loaded="HistoryComboBox_Loaded"/>
                                            </DataTemplate>
                                        </DataGridTemplateColumn.CellEditingTemplate>
                                    </DataGridTemplateColumn>

                                    <!-- 主题 -->
                                    <DataGridTemplateColumn Header="主题" Width="150" HeaderStyle="{StaticResource PurpleHeader}">
                                        <DataGridTemplateColumn.CellTemplate>
                                            <DataTemplate>
                                                <TextBlock Text="{Binding Subject}" TextTrimming="CharacterEllipsis"/>
                                            </DataTemplate>
                                        </DataGridTemplateColumn.CellTemplate>
                                        <DataGridTemplateColumn.CellEditingTemplate>
                                            <DataTemplate>
                                                <ComboBox Text="{Binding Subject, UpdateSourceTrigger=LostFocus}" 
                                                          IsEditable="True" 
                                                          Tag="Subject"
                                                          Loaded="HistoryComboBox_Loaded"/>
                                            </DataTemplate>
                                        </DataGridTemplateColumn.CellEditingTemplate>
                                    </DataGridTemplateColumn>

                                    <!-- 分级 -->
                                    <DataGridTemplateColumn Header="分级" Width="80" HeaderStyle="{StaticResource OrangeHeader}">
                                        <DataGridTemplateColumn.CellTemplate>
                                            <DataTemplate>
                                                <TextBlock Text="{Binding Rating}"/>
                                            </DataTemplate>
                                        </DataGridTemplateColumn.CellTemplate>
                                        <DataGridTemplateColumn.CellEditingTemplate>
                                            <DataTemplate>
                                                <TextBox Text="{Binding Rating, UpdateSourceTrigger=PropertyChanged}"
                                                         PreviewTextInput="RatingTextBox_PreviewTextInput"
                                                         MaxLength="2"/>
                                            </DataTemplate>
                                        </DataGridTemplateColumn.CellEditingTemplate>
                                    </DataGridTemplateColumn>

                                    <!-- 标记 -->
                                    <DataGridTemplateColumn Header="标记" Width="180" HeaderStyle="{StaticResource GreenHeader}">
                                        <DataGridTemplateColumn.CellTemplate>
                                            <DataTemplate>
                                                <TextBlock Text="{Binding Tags}" TextTrimming="CharacterEllipsis" ToolTip="多个标记用 ; 分隔"/>
                                            </DataTemplate>
                                        </DataGridTemplateColumn.CellTemplate>
                                        <DataGridTemplateColumn.CellEditingTemplate>
                                            <DataTemplate>
                                                <ComboBox Text="{Binding Tags, UpdateSourceTrigger=LostFocus}" 
                                                          IsEditable="True" 
                                                          Tag="Tags"
                                                          ToolTip="多个标记用 ; 分隔"
                                                          Loaded="HistoryComboBox_Loaded"/>
                                            </DataTemplate>
                                        </DataGridTemplateColumn.CellEditingTemplate>
                                    </DataGridTemplateColumn>

                                    <!-- 类别 -->
                                    <DataGridTemplateColumn Header="类别" Width="180" HeaderStyle="{StaticResource CyanHeader}">
                                        <DataGridTemplateColumn.CellTemplate>
                                            <DataTemplate>
                                                <TextBlock Text="{Binding Category}" TextTrimming="CharacterEllipsis" ToolTip="多个类别用 ; 分隔"/>
                                            </DataTemplate>
                                        </DataGridTemplateColumn.CellTemplate>
                                        <DataGridTemplateColumn.CellEditingTemplate>
                                            <DataTemplate>
                                                <ComboBox Text="{Binding Category, UpdateSourceTrigger=LostFocus}" 
                                                          IsEditable="True" 
                                                          Tag="Category"
                                                          ToolTip="多个类别用 ; 分隔"
                                                          Loaded="HistoryComboBox_Loaded"/>
                                            </DataTemplate>
                                        </DataGridTemplateColumn.CellEditingTemplate>
                                    </DataGridTemplateColumn>

                                    <!-- 备注 -->
                                    <DataGridTemplateColumn Header="备注" Width="*" MinWidth="200" HeaderStyle="{StaticResource DarkGrayHeader}">
                                        <DataGridTemplateColumn.CellTemplate>
                                            <DataTemplate>
                                                <TextBlock Text="{Binding Comment}" TextTrimming="CharacterEllipsis"/>
                                            </DataTemplate>
                                        </DataGridTemplateColumn.CellTemplate>
                                        <DataGridTemplateColumn.CellEditingTemplate>
                                            <DataTemplate>
                                                <ComboBox Text="{Binding Comment, UpdateSourceTrigger=LostFocus}" 
                                                          IsEditable="True" 
                                                          Tag="Comment"
                                                          Loaded="HistoryComboBox_Loaded"/>
                                            </DataTemplate>
                                        </DataGridTemplateColumn.CellEditingTemplate>
                                    </DataGridTemplateColumn>
                                </DataGrid.Columns>
                            </DataGrid>
                        </Border>
                    </Expander>

                    <!-- 文件夹列表 Expander -->
                    <Expander x:Name="expanderFolders" Header="文件夹 (0)" IsExpanded="True" Margin="5">
                        <Expander.HeaderTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding}" FontSize="14" FontWeight="Bold" Foreground="#FF333333"/>
                            </DataTemplate>
                        </Expander.HeaderTemplate>

                        <StackPanel>
                            <!-- 文件夹批量操作工具栏 -->
                            <Border Background="White" CornerRadius="8" Padding="10" Margin="5,5,5,10">
                                <Border.Effect>
                                    <DropShadowEffect BlurRadius="10" ShadowDepth="2" Color="LightGray" Opacity="0.3"/>
                                </Border.Effect>
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>

                                    <WrapPanel Grid.Column="0" Orientation="Horizontal">
                                        <TextBlock Text="文件夹批量操作:" VerticalAlignment="Center" FontWeight="Bold" Margin="5,0,10,0" Foreground="#FFFF9800"/>

                                        <Button x:Name="btnSelectAllFolders" Content="全选" Width="60" Margin="5,0"
                                                Style="{StaticResource SecondaryButton}" Click="BtnSelectAllFolders_Click"/>
                                        <Button x:Name="btnSelectNoneFolders" Content="全不选" Width="60" Margin="5,0"
                                                Style="{StaticResource SecondaryButton}" Click="BtnSelectNoneFolders_Click"/>
                                        <Button x:Name="btnInvertSelectionFolders" Content="反选" Width="60" Margin="5,0"
                                                Style="{StaticResource SecondaryButton}" Click="BtnInvertSelectionFolders_Click"/>

                                        <Separator Margin="10,0" Width="2"/>

                                        <ComboBox x:Name="cmbBatchFieldFolder" Width="100" Margin="5,0" SelectedIndex="0"
                                                  SelectionChanged="CmbBatchFieldFolder_SelectionChanged">
                                            <ComboBoxItem Content="别名"/>
                                            <ComboBoxItem Content="备注"/>
                                            <ComboBoxItem Content="标题"/>
                                            <ComboBoxItem Content="主题"/>
                                            <ComboBoxItem Content="作者"/>
                                            <ComboBoxItem Content="标记"/>
                                        </ComboBox>

                                        <ComboBox x:Name="txtBatchValueFolder" Width="200" Margin="5,0"
                                                  VerticalAlignment="Center" IsEditable="True"/>

                                        <Button x:Name="btnApplyBatchFolder" Content="应用到选中" Width="90" Margin="5,0"
                                                Style="{StaticResource ModernButton}" Click="BtnApplyBatchFolder_Click"/>

                                        <Button x:Name="btnClearSelectedFolder" Content="清空选中" Width="80" Margin="5,0"
                                                Style="{StaticResource SecondaryButton}" Click="BtnClearSelectedFolder_Click"
                                                ToolTip="清空所选文件夹的所选字段"/>
                                        
                                        <Separator Margin="10,0" Width="2"/>
                                        
                                        <Button x:Name="btnCopySelectedFolders" Content="复制选中" Width="80" Margin="5,0"
                                                Style="{StaticResource SecondaryButton}" Click="BtnCopySelectedFolders_Click"
                                                ToolTip="复制选中文件夹到剪贴板（表格格式）"/>
                                        <Button x:Name="btnCopyAllFolders" Content="复制全部" Width="80" Margin="5,0"
                                                Style="{StaticResource SecondaryButton}" Click="BtnCopyAllFolders_Click"
                                                ToolTip="复制全部文件夹到剪贴板（表格格式）"/>
                                    </WrapPanel>

                                    <Button Grid.Column="1" x:Name="btnFolderColumnSettings" Content="列设置" Width="80"
                                            Style="{StaticResource SecondaryButton}" Click="BtnFolderColumnSettings_Click" 
                                            ToolTip="设置文件夹列显示/隐藏" Margin="5,0,0,0"/>
                                </Grid>
                            </Border>

                            <Border Background="#FAFAFA" CornerRadius="4" Margin="5" Padding="5">
                                    <DataGrid x:Name="dgFolders"
                                          AutoGenerateColumns="False"
                                          CanUserAddRows="False"
                                          CanUserDeleteRows="False"
                                          SelectionMode="Extended"
                                          AlternatingRowBackground="#FFF5F5F5"
                                          GridLinesVisibility="Horizontal"
                                          HeadersVisibility="Column"
                                      RowHeight="26"
                                      MaxHeight="250"
                                          RowStyle="{StaticResource ModifiedRowStyle}"
                                          FontSize="12"
                                          FontFamily="Segoe UI, Microsoft YaHei UI, Arial"
                                      TextOptions.TextFormattingMode="Display"
                                      TextOptions.TextRenderingMode="ClearType"
                                      RenderOptions.ClearTypeHint="Enabled"
                                      ClipboardCopyMode="ExcludeHeader"
                                      CopyingRowClipboardContent="DgFolders_CopyingRowClipboardContent">

                                <DataGrid.Columns>
                                    <!-- 选择框 -->
                                    <DataGridCheckBoxColumn Header="选择" Binding="{Binding IsSelected, UpdateSourceTrigger=PropertyChanged}" Width="50" ClipboardContentBinding="{x:Null}"/>

                                    <!-- 文件夹名 -->
                                    <DataGridTextColumn Header="文件夹名" Binding="{Binding FolderName}" Width="200" IsReadOnly="True">
                                        <DataGridTextColumn.ElementStyle>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="ToolTip" Value="{Binding FolderPath}"/>
                                                <Setter Property="TextTrimming" Value="CharacterEllipsis"/>
                                            </Style>
                                        </DataGridTextColumn.ElementStyle>
                                    </DataGridTextColumn>

                                    <!-- 别名 (LocalizedResourceName) -->
                                    <DataGridTemplateColumn Header="别名" Width="150" HeaderStyle="{StaticResource BlueHeader}">
                                        <DataGridTemplateColumn.CellTemplate>
                                            <DataTemplate>
                                                <TextBlock Text="{Binding Alias}" TextTrimming="CharacterEllipsis"/>
                                            </DataTemplate>
                                        </DataGridTemplateColumn.CellTemplate>
                                        <DataGridTemplateColumn.CellEditingTemplate>
                                            <DataTemplate>
                                                <ComboBox Text="{Binding Alias, UpdateSourceTrigger=LostFocus}" 
                                                          IsEditable="True" 
                                                          Tag="LocalizedResourceName"
                                                          Loaded="HistoryComboBox_Loaded"/>
                                            </DataTemplate>
                                        </DataGridTemplateColumn.CellEditingTemplate>
                                    </DataGridTemplateColumn>

                                    <!-- 备注 (InfoTip) -->
                                    <DataGridTemplateColumn Header="备注" Width="*" MinWidth="200" HeaderStyle="{StaticResource DarkGrayHeader}">
                                        <DataGridTemplateColumn.CellTemplate>
                                            <DataTemplate>
                                                <TextBlock Text="{Binding InfoTip}" TextTrimming="CharacterEllipsis"/>
                                            </DataTemplate>
                                        </DataGridTemplateColumn.CellTemplate>
                                        <DataGridTemplateColumn.CellEditingTemplate>
                                            <DataTemplate>
                                                <ComboBox Text="{Binding InfoTip, UpdateSourceTrigger=LostFocus}" 
                                                          IsEditable="True" 
                                                          Tag="InfoTip"
                                                          Loaded="HistoryComboBox_Loaded"/>
                                            </DataTemplate>
                                        </DataGridTemplateColumn.CellEditingTemplate>
                                    </DataGridTemplateColumn>

                                    <!-- 标题 (Prop2) -->
                                    <DataGridTemplateColumn Header="标题" Width="150" HeaderStyle="{StaticResource PurpleHeader}">
                                        <DataGridTemplateColumn.CellTemplate>
                                            <DataTemplate>
                                                <TextBlock Text="{Binding Title}" TextTrimming="CharacterEllipsis"/>
                                            </DataTemplate>
                                        </DataGridTemplateColumn.CellTemplate>
                                        <DataGridTemplateColumn.CellEditingTemplate>
                                            <DataTemplate>
                                                <ComboBox Text="{Binding Title, UpdateSourceTrigger=LostFocus}" 
                                                          IsEditable="True" 
                                                          Tag="Prop2"
                                                          Loaded="HistoryComboBox_Loaded"/>
                                            </DataTemplate>
                                        </DataGridTemplateColumn.CellEditingTemplate>
                                    </DataGridTemplateColumn>

                                    <!-- 主题 (Prop3) -->
                                    <DataGridTemplateColumn Header="主题" Width="150" HeaderStyle="{StaticResource OrangeHeader}">
                                        <DataGridTemplateColumn.CellTemplate>
                                            <DataTemplate>
                                                <TextBlock Text="{Binding Subject}" TextTrimming="CharacterEllipsis"/>
                                            </DataTemplate>
                                        </DataGridTemplateColumn.CellTemplate>
                                        <DataGridTemplateColumn.CellEditingTemplate>
                                            <DataTemplate>
                                                <ComboBox Text="{Binding Subject, UpdateSourceTrigger=LostFocus}" 
                                                          IsEditable="True" 
                                                          Tag="Prop3"
                                                          Loaded="HistoryComboBox_Loaded"/>
                                            </DataTemplate>
                                        </DataGridTemplateColumn.CellEditingTemplate>
                                    </DataGridTemplateColumn>

                                    <!-- 作者 (Prop4) -->
                                    <DataGridTemplateColumn Header="作者" Width="120" HeaderStyle="{StaticResource RedHeader}">
                                        <DataGridTemplateColumn.CellTemplate>
                                            <DataTemplate>
                                                <TextBlock Text="{Binding Author}" TextTrimming="CharacterEllipsis"/>
                                            </DataTemplate>
                                        </DataGridTemplateColumn.CellTemplate>
                                        <DataGridTemplateColumn.CellEditingTemplate>
                                            <DataTemplate>
                                                <ComboBox Text="{Binding Author, UpdateSourceTrigger=LostFocus}" 
                                                          IsEditable="True" 
                                                          Tag="Prop4"
                                                          Loaded="HistoryComboBox_Loaded"/>
                                            </DataTemplate>
                                        </DataGridTemplateColumn.CellEditingTemplate>
                                    </DataGridTemplateColumn>

                                    <!-- 标记 (Prop5) -->
                                    <DataGridTemplateColumn Header="标记" Width="180" HeaderStyle="{StaticResource GreenHeader}">
                                        <DataGridTemplateColumn.CellTemplate>
                                            <DataTemplate>
                                                <TextBlock Text="{Binding Tags}" TextTrimming="CharacterEllipsis" ToolTip="多个标记用 ; 分隔"/>
                                            </DataTemplate>
                                        </DataGridTemplateColumn.CellTemplate>
                                        <DataGridTemplateColumn.CellEditingTemplate>
                                            <DataTemplate>
                                                <ComboBox Text="{Binding Tags, UpdateSourceTrigger=LostFocus}" 
                                                          IsEditable="True" 
                                                          Tag="Prop5"
                                                          ToolTip="多个标记用 ; 分隔"
                                                          Loaded="HistoryComboBox_Loaded"/>
                                            </DataTemplate>
                                        </DataGridTemplateColumn.CellEditingTemplate>
                                    </DataGridTemplateColumn>
                                    </DataGrid.Columns>
                                </DataGrid>
                            </Border>
                        </StackPanel>
                    </Expander>
                </StackPanel>
            </ScrollViewer>
        </Border>

        <!-- 进度条和状态信息 -->
        <Border Grid.Row="3" Margin="0,10,0,10" Background="White" CornerRadius="8" Padding="10"
                x:Name="progressPanel" Visibility="Collapsed">
            <Border.Effect>
                <DropShadowEffect BlurRadius="10" ShadowDepth="2" Color="LightGray" Opacity="0.3"/>
            </Border.Effect>
            <StackPanel>
                <TextBlock x:Name="txtProgress" Text="正在保存..." FontSize="12" Margin="0,0,0,5"/>
                <ProgressBar x:Name="progressBar" Height="20" Minimum="0" Maximum="100" Value="0"/>
            </StackPanel>
        </Border>

        <!-- 按钮区域 -->
        <StackPanel Grid.Row="4" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,5,0,0">
            <TextBlock x:Name="txtModifiedCount" Text="0 个文件已修改" VerticalAlignment="Center"
                       Margin="0,0,20,0" FontSize="12" Foreground="#FF666666"/>

            <Button x:Name="btnCopySelectedAll" Content="复制选中" Width="100" Margin="5,0"
                    Style="{StaticResource SecondaryButton}" Click="BtnCopySelectedAll_Click"
                    ToolTip="复制选中的文件和文件夹到剪贴板（表格格式）"/>

            <Button x:Name="btnCopyAll" Content="复制全部" Width="100" Margin="5,0"
                    Style="{StaticResource SecondaryButton}" Click="BtnCopyAll_Click"
                    ToolTip="复制所有文件和文件夹到剪贴板（表格格式）"/>

            <Separator Margin="10,0" Width="2"/>

            <Button x:Name="btnExportConfig" Content="导出配置" Width="100" Margin="5,0"
                    Style="{StaticResource SecondaryButton}" Click="BtnExportConfig_Click"
                    ToolTip="导出当前配置到TOML文件"/>

            <Button x:Name="btnImportConfig" Content="导入配置" Width="100" Margin="5,0"
                    Style="{StaticResource SecondaryButton}" Click="BtnImportConfig_Click"
                    ToolTip="从TOML文件导入配置"/>

            <Separator Margin="10,0" Width="2"/>



            <Separator Margin="10,0" Width="2"/>

            <Button x:Name="btnSaveAll" Content="保存全部" Width="100" Margin="5,0"
                    Style="{StaticResource ModernButton}" Click="BtnSaveAll_Click"
                    ToolTip="保存所有已修改的文件"/>

            <Button x:Name="btnSaveSelected" Content="保存选中" Width="100" Margin="5,0"
                    Style="{StaticResource ModernButton}" Click="BtnSaveSelected_Click"
                    ToolTip="仅保存选中的文件"/>

            <Button x:Name="btnCancel" Content="取消" Width="80" Margin="5,0"
                    IsCancel="True" Style="{StaticResource CancelButton}"/>
        </StackPanel>
    </Grid>
</Window>
